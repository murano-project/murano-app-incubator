FormatVersion: 2.0.0
Version: 1.0.0
Name: Add database and user to MySql

Parameters:
  database: $database
  username: $username
  password: $password

Body: |
  return configure('{0} {1} {2}'.format(args.database, args.username, args.password)).stdout

Scripts:
  configure:
    Type: Application
    Version: 1.0.0
    EntryPoint: configureMySqlDatabase.sh
    Files:
      - <common.sh>
    Options:
      captureStdout: true
      captureStderr: true
