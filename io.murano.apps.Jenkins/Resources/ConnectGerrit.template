FormatVersion: 2.0.0
Version: 1.0.0
Name: Connect LDAP

Parameters:
  gerritIp: $gerritIp
  domain:   $domain

Body: |
  return configure('{0} {1}'.format(args.gerritIp, args.domain)).stdout

Scripts:
  configure:
    Type: Application
    Version: 1.0.0
    EntryPoint: connectGerrit.sh
    Files: []
    Options:
      captureStdout: true
      captureStderr: true
      verifyExitcode: false
