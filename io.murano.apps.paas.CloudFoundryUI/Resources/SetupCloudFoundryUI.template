FormatVersion: 2.0.0
Version: 1.0.0
Name: Setup CloudFoundry UI

Parameters:
  ip: $ip
  user: $user
  pass: $pass

Body: |
  return deploy('{0} {1} {2}'.format(args.ip, args.user, args.pass)).stdout

Scripts:
  deploy:
    Type: Application
    Version: 1.0.0
    EntryPoint: setupCF.sh
    Files:
      - <common.sh>
    Options:
      captureStdout: true
      captureStderr: false
