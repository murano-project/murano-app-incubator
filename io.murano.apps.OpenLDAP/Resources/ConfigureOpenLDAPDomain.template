FormatVersion: 2.0.0
Version: 1.0.0
Name: Configure OpenLDAP

Parameters:
  domain: $domain

Body: |
  return configure('{0}'.format(args.domain)).stdout

Scripts:
  configure:
    Type: Application
    Version: 1.0.0
    EntryPoint: configureOpenLDAPDomain.sh
    Files: []
    Options:
      captureStdout: true
      captureStderr: true
